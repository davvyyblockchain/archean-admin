<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Profile | Blockchain Australia Solutions</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/x-icon" sizes="16x16" href="/assets/images/favicon/favicon.ico">
    <link href="../assets/vendor/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet">

    <link href="../assets/css/admin-style.css" rel="stylesheet">

</head>

<body>

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="sk-three-bounce">
            <div class="sk-child sk-bounce1"></div>
            <div class="sk-child sk-bounce2"></div>
            <div class="sk-child sk-bounce3"></div>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    <!--**********************************
        Main wrapper start
    ***********************************-->
    <div id="main-wrapper" class="show">

        <!--**********************************
            Nav header start
        ***********************************-->

        <!--**********************************
            Nav header end
        ***********************************-->

        <!--**********************************
            Header start
        ***********************************-->
        <%- include('header'); -%>
        <!--**********************************
            Header end ti-comment-alt
        ***********************************-->

        <!--**********************************
            Sidebar start
        ***********************************-->
        <%- include('sidebar'); -%>
        <!--**********************************
            Sidebar end
        ***********************************-->

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <!-- row -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-6 col-xxl-12">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12">
                                <div class="card mb-4 mb-xl-0">
                                    <div class="card-header border-0  pb-0">
                                        <div>
                                            <h4 class="text-black fs-20">My Profile</h4>
                                        </div>
                                    </div>
                                    <div class="card-body bg-white border-bottom">
                                        <div class="media profile-bx">
                                            <img id="userProfilePicture" src="../assets/images/user-avatar.svg"
                                                alt="" />

                                            <input style="display: none;" id="imageUpload" type="file"
                                                accept=".png, .jpg, .jpeg" />
                                            <div class="media-body align-items-center">
                                                <h2 class="text-black font-w600" id="fullName"></h2>
                                                <p class="mb-2" id="username">-</p>
                                                <p class="text-black" id="joiningData">Join on 24 March 2017</p>
                                                <div class="social-icons">
                                                    <a href="javascript:void(0);" class="iconbx fa fa-phone"></a>
                                                    <a href="javascript:void(0);" class="iconbx fa fa-envelope"></a>
                                                    <a href="javascript:void(0);" class="iconbx fa fa-facebook"></a>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="profile-image-error" class="invalid-feedback animated fadeInUp">
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-xl-6 col-xxl-12">
                        <div class="row">
                            <div class="col-xl-12 col-lg-12">
                                <div class="card">
                                    <div class="card-header border-0 d-xl-flex d-lg-block d-md-flex d-sm-flex d-block">
                                        <div class="mr-2">
                                            <h4 class="fs-20 text-black">Edit Profile</h4>
                                        </div>
                                    </div>
                                    <div class="card-body tab-content card-table">
                                        <div class="form-validation">
                                            <form class="form-valide" id="edit-profile">
                                                <div class="row">
                                                    <div class="col-xl-12">
                                                        <!-- <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label"
                                                                for="edit_profileImage">Profile Image
                                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type='file' id="imageUpload" name="fileUpload"
                                                                accept=".png, .jpg, .jpeg" />
                                                                <label for="imageUpload"></label>
                                                            </div>
                                                        </div> -->
                                                        <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label"
                                                                for="edit_firstname">First Name
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type="text" class="form-control"
                                                                    id="edit_firstname" name="edit_firstname"
                                                                    placeholder="First Name">
                                                                <div id="firstname-error"
                                                                    class="invalid-feedback animated fadeInUp">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label"
                                                                for="edit_lastname">Last Name
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type="text" class="form-control"
                                                                    id="edit_lastname" name="edit_lastname"
                                                                    placeholder="Last Name">
                                                                <div id="lastname-error"
                                                                    class="invalid-feedback animated fadeInUp">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label"
                                                                for="edit_email">Email
                                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type="text" class="form-control" id="edit_email"
                                                                    name="edit_email" placeholder="Email" disabled>
                                                                <div id="email-error"
                                                                    class="invalid-feedback animated fadeInUp">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label"
                                                                for="edit_username">Username
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type="text" class="form-control"
                                                                    id="edit_username" name="edit_username"
                                                                    placeholder="Username">
                                                                <div id="username-error"
                                                                    class="invalid-feedback animated fadeInUp">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-lg-4 col-form-label"
                                                                for="edit_walletaddress">Wallet Address
                                                            </label>
                                                            <div class="col-lg-6">
                                                                <input type="text" class="form-control"
                                                                    id="edit_walletaddress" name="edit_walletaddress"
                                                                    placeholder="Wallet Address" disabled>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <div class="col-lg-8 ml-auto">
                                                                <button type="button" id="editProfile"
                                                                    class="btn btn-primary">Submit</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

        <!--**********************************
            Footer start
        ***********************************-->
    
        <%- include('footer'); -%>

        <!--**********************************
            Footer end
        ***********************************-->

    </div>
    <!--**********************************
        Main wrapper end
    ***********************************-->

    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="../assets/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="../assets/js/custom.min.js"></script>
    <script src="../assets/js/deznav-init.js"></script>

    <script src="../Admin/js/profile.js"></script>

</body>

</html>